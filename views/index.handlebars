<nav class="navbar navbar-dark bg-dark">
  <a href="/" class="navbar-brand">Scraping Satire</a>
  <form class="form-inline">
    <button class="btn btn-outline-success" type="button" id="scrapeAgain">See New Articles</button>
    <a href="./saved" class="btn btn-outline-success" role="button">View Saved Articles</a>
  </form>
</nav>

<div class="wrapper">
  <div class="jumbotron jumbotron-fluid shadow-lg p-3 mb-5 bg-white rounded" id="indexJumbotron">
    <div class="container jumboTitle">
      <h1>America's Finest News Scraper</h1>
      <h3>View the latest articles from America's Finest News Source, The Onion.</h3>
    </div>
  </div>
  <div class="container">
    {{#each dbArticle}}
    <div class="card bg-secondary mb-3 articles">
      <div class="card-body">
        <div class="row">
          <div class="col-9">
            <h4>{{this.title}}</h4>
            <p>{{this.summary}}</p>
            <a href={{this.link}} target="_blank">Read Full Article</a>
          </div>
          <div class="col-3">
            <!-- Delete Article Button -->
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
              Delete Article
            </button>
            <!-- Button to trigger notes modal -->
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#noteModal">
              View Notes
            </button>
          </div>
        </div>
      </div>
    </div> <br>
    {{/each}}

    <!-- Modal for Notes-->
    <div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="notemodalLabel">{{dbArticle.title}} Notes</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            {{this.note}}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>